---
import "../styles/tokens.css";
import "../styles/theme.css";
import SiteHeader from "../components/SiteHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
import LeftRail from "../components/LeftRail.astro";
import RightRail from "../components/RightRail.astro";
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title ? `${title} â€” Samogitian Chronicle` : "Samogitian Chronicle"}</title>
  </head>
  <body>
    <SiteHeader />
    <div style="display:grid; grid-template-columns: 280px minmax(0,1fr) 320px; gap: 1.25rem; align-items:start; padding: 1rem; max-width: 1280px; margin: 0 auto;">
      <aside aria-label="Chapter navigation"><LeftRail /></aside>
      <main id="main"><slot /></main>
      <aside aria-label="Maps and data"><RightRail /></aside>
    </div>
    <SiteFooter />
  </body>
</html>
